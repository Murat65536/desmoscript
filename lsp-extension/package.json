{
  "name": "desmoscript-language-support",
  "description": "Desmoscript language support",
  "author": "radian628",
  "license": "MIT",
  "version": "0.4.8",
  "publisher": "radian628",
  "type": "module",
  "categories": [],
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.82.0"
  },
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "main": "./client/out/extension-node.js",
  "browser": "./client/out/extension-browser.js",
  "contributes": {
    "menus": {
      "explorer/context": [
        {
          "command": "desmoscript.run",
          "when": "resourceLangId == desmo"
        },
        {
          "command": "desmoscript.outputToJson",
          "when": "resourceLangId == desmo"
        },
        {
          "command": "desmoscript.watch",
          "when": "resourceLangId == desmo"
        }
      ],
      "editor/title/context": [
        {
          "command": "desmoscript.run",
          "when": "resourceLangId == desmo"
        },
        {
          "command": "desmoscript.outputToJson",
          "when": "resourceLangId == desmo"
        },
        {
          "command": "desmoscript.watch",
          "when": "resourceLangId == desmo"
        }
      ],
      "view/item/context": [
        {
          "command": "desmoscript.run",
          "when": "resourceLangId == desmo"
        },
        {
          "command": "desmoscript.outputToJson",
          "when": "resourceLangId == desmo"
        },
        {
          "command": "desmoscript.watch",
          "when": "resourceLangId == desmo"
        }
      ]
    },
    "commands": [
      {
        "command": "desmoscript.run",
        "title": "Run Desmoscript",
        "category": "Desmoscript"
      },
      {
        "command": "desmoscript.outputToJson",
        "title": "Compile Desmoscript to Clipboard",
        "category": "Desmoscript"
      },
      {
        "command": "desmoscript.watch",
        "title": "Start Desmoscript HTTP Server",
        "category": "Desmoscript"
      }
    ],
    "languages": [
      {
        "id": "desmo",
        "extensions": [
          ".desmo"
        ]
      }
    ],
    "configurationDefaults": {
      "[desmo]": {
        "editor.semanticHighlighting.enabled": true,
        "editor.matchBrackets": "always",
        "editor.bracketPairColorization.enabled": true,
        "editor.autoClosingBrackets": "always",
        "editor.language.brackets": [
          [
            "(",
            ")"
          ],
          [
            "[",
            "]"
          ],
          [
            "{",
            "}"
          ],
          [
            "\"",
            "\""
          ]
        ]
      }
    },
    "configuration": {
      "type": "object",
      "title": "Desmoscript configuration",
      "properties": {
        "desmoscript.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "desmoscript.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "node esbuild.mjs",
    "compile": "npm run esbuild-base",
    "watch": "node esbuild.mjs",
    "lint": "eslint ./client/src",
    "postinstall": "cd client && npm install",
    "test": "sh ./scripts/e2e.sh",
    "test-web": "npm run watch && vscode-test-web --extensionDevelopmentPath=./",
    "run-web": "vscode-test-web --extensionDevelopmentPath=./",
    "build": "node esbuild.mjs"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.2",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "@vscode/test-web": "^0.0.79",
    "concurrently": "^9.1.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.0",
    "globals": "^16.2.0",
    "mocha": "^11.1.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "object-inspect": "^1.13.4"
  }
}
